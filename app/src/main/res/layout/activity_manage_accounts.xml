<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.mattcarroll.androidtesting.accounts.ManageAccountsActivity"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_accounts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textview_no_accounts"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/text_no_linked_accounts"
        android:textSize="21sp"
        />

    <Button
        android:id="@+id/button_link_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:text="@string/button_link_account"
        />

</LinearLayout>
